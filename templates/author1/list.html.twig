{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #3498db;
            color: #fff;
            font-size: 1.1em;
        }

        tr:hover {
            background: #f2f9ff;
        }

        img {
            border-radius: 50%;
            width: 70px;
            height: 70px;
            object-fit: cover;
            border: 3px solid #3498db;
        }

        .details-link a {
            text-decoration: none;
            color: #3498db;
            font-weight: bold;
            transition: color 0.2s ease;
        }

        .details-link a:hover {
            color: #2c3e50;
        }
    </style>

    <h1>Liste des Auteurs</h1>
    <p><strong>Nombre d'auteurs :</strong> {{ nbAuthors }}</p>
    <p><strong>Nombre total de livres :</strong> {{ totalBooks }}</p>

    <table>
        <thead>
            <tr>
                <th>Photo</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Nombre de livres</th>
                <th>Détails</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td><img src="{{ author.picture }}" alt="{{ author.username }}"></td>
                    <td><strong>{{ author.username|upper }}</strong></td>
                    <td>{{ author.email }}</td>
                    <td>{{ author.nb_books }}</td>
                    <td class="details-link">
    <a href="{{ path('author_details', { id: author.id }) }}">Détails</a>
</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
